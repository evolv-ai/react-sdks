{
  "extends": "./tsconfig/react-library.json",
  "include": [".", "src"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "paths": {
      "@types": ["./types/index.ts"]
    },
    "module": "commonjs",
    "sourceRoot": "../",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  }
}
