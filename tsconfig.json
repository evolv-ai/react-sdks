{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "composite": true,
    "types": [
      "react",
      "react-dom"
    ],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ],
  "references": [
    { "path": "./packages/nextjs" },
    { "path": "./packages/nextjs-demo" },
    { "path": "./packages/react" },
    { "path": "./packages/react-demo" }
  ]
}
