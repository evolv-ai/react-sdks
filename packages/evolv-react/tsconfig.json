{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "paths": {
      "@types": ["./types/index.ts"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  }
}
