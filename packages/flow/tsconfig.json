{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "lib": [ "es2015", "dom" ],
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
}