{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "1.0.14",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "private": false
    },
    "publish": {
      "private": false,
      "createRelease": "github"
    }
  }
}
